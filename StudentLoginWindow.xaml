<Window x:Class="VirtualClassroom.StudentLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Portal - Login"
        Height="550" Width="1000"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        AllowsTransparency="True" WindowStyle="None" Background="Transparent">

    <Window.Resources>
        <Style x:Key="ModernStudentInput" TargetType="Control">
            <Setter Property="Background" Value="#F0FDFA"/>
            <Setter Property="BorderBrush" Value="#CCFBF1"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Height" Value="42"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,6,0,18"/>
            <Setter Property="Foreground" Value="#115E59"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Style.Resources>
        </Style>

        <Style x:Key="SecondaryStudentButton" TargetType="Button">
            <Setter Property="Background" Value="#E0F2F1"/>
            <Setter Property="Foreground" Value="#0D9488"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="25" ClipToBounds="True">
        <Grid>
            <Grid.Background>
                <ImageBrush ImageSource="/Images/classroom.webp" Stretch="UniformToFill">
                    <ImageBrush.RelativeTransform>
                        <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1.1" ScaleY="1.1"/>
                    </ImageBrush.RelativeTransform>
                </ImageBrush>
            </Grid.Background>

            <Grid Background="#550D9488">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="450"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="60,0,0,0">
                    <TextBlock Text="Student" Foreground="White" FontSize="48" FontWeight="ExtraBold" Opacity="1"/>
                    <TextBlock Text="Portal" Foreground="White" FontSize="48" FontWeight="ExtraBold" Margin="0,-15,0,0" Opacity="1"/>
                    <TextBlock Text="Access your learning journey." Foreground="White" FontSize="18" Margin="5,10,0,0" Opacity="0.8"/>
                </StackPanel>

                <Border Grid.Column="1" 
                        Background="#EEFFFFFF" 
                        CornerRadius="30" 
                        Margin="30,50,50,50" 
                        Padding="40" 
                        VerticalAlignment="Stretch">

                    <Border.Effect>
                        <DropShadowEffect BlurRadius="40" ShadowDepth="0" Opacity="0.2" Color="#0F766E"/>
                    </Border.Effect>

                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Welcome, Student" FontSize="32" FontWeight="ExtraBold" Foreground="#115E59" Margin="0,0,0,4"/>
                        <TextBlock Text="Login to view your dashboard." FontSize="14" Foreground="#14B8A6" Margin="0,0,0,30"/>

                        <TextBlock Text="Student ID / Username" Foreground="#115E59" FontWeight="Bold" FontSize="13"/>
                        <TextBox x:Name="TxtUsername" Style="{StaticResource ModernStudentInput}"/>

                        <TextBlock Text="Password" Foreground="#115E59" FontWeight="Bold" FontSize="13"/>
                        <PasswordBox x:Name="PwdPassword" Style="{StaticResource ModernStudentInput}"/>

                        <Button Content="Login" 
                                Click="LoginButton_Click" 
                                Height="48" 
                                Background="#0D9488" 
                                Foreground="White" 
                                FontSize="16" 
                                FontWeight="Bold" 
                                BorderThickness="0" 
                                Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="12">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#0F766E"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>

                        <TextBlock Text="Forgot Password?" Foreground="#14B8A6" FontSize="12" HorizontalAlignment="Center" Margin="0,20,0,0" Cursor="Hand"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>