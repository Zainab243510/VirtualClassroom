<Window x:Class="VirtualClassroom.AddCourseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add New Course" Height="521" Width="400"
        WindowStartupLocation="CenterOwner"
        >
    <Window.Background>
        <ImageBrush ImageSource="/Images/course.jpg" 
                 Stretch="UniformToFill" 
                 Opacity="0.5"/>
    </Window.Background>
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Foreground" Value="#1E40AF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
        </Style>

        <Style x:Key="ModernInput" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Top"/>
            <Setter Property="Padding" Value="8,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#CCFFFFFF" Margin="20,28,38,20" CornerRadius="20">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <RowDefinition Height="*"/>    <RowDefinition Height="Auto"/> </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Course Creation" FontSize="20" FontWeight="Bold" Foreground="#1E3A8A"/>
                <Rectangle Height="3" Width="40" Fill="#3B82F6" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            </StackPanel>

            <StackPanel Grid.Row="1">
                <Label Content="Course ID:"/>
                <TextBox x:Name="TxtCourseID" Style="{StaticResource ModernInput}" Height="35"/>

                <Label Content="Course Name:"/>
                <TextBox x:Name="TxtCourseName" Style="{StaticResource ModernInput}" Height="35"/>

                <Label Content="Description:"/>
                <TextBox x:Name="TxtDescription" 
                         Style="{StaticResource ModernInput}" 
                         Height="100" 
                         TextWrapping="Wrap" 
                         AcceptsReturn="True"
                         VerticalContentAlignment="Top"/>
            </StackPanel>

            <Button Grid.Row="2" 
                    Content="Save Course" 
                    Click="SaveCourse_Click" 
                    Background="#3B82F6" 
                    Foreground="White" 
                    FontWeight="Bold" 
                    Height="45" 
                    Margin="0,20,0,0" 
                    Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="12">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1E40AF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Border>
</Window>