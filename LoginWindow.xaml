<Window x:Class="VirtualClassroom.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Height="525" Width="972">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="Username:"/>
        <TextBox x:Name="TxtUsername" Grid.Row="0" Margin="100,5,10,5"/>

        <Label Grid.Row="1" Content="Password:" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="0.04"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <PasswordBox x:Name="PwdPassword" Grid.Row="1" Margin="100,5,10,5"/>

        <Button Grid.Row="2" Content="Login" Click="LoginButton_Click" Margin="50,10" Padding="5"/>
    </Grid>
</Window>