<Window x:Class="VirtualClassroom.ReportsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Generate Reports" Height="650" Width="550"
        WindowStartupLocation="CenterOwner">

    <Window.Background>
        <ImageBrush ImageSource="/Images/grades.jpg" 
                    Stretch="UniformToFill" 
                    Opacity="0.5"/>
    </Window.Background>

    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#1E40AF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,15,0,8"/>
        </Style>

        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="#99FFFFFF" Margin="25" CornerRadius="20" BorderBrush="White" BorderThickness="1.5">
        <Border.Effect>
            <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
        </Border.Effect>

        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,10">
                <TextBlock Text="Report Center" FontSize="22" FontWeight="Bold" Foreground="#1E3A8A"/>
                <TextBlock Text="Configure and export your academic data" FontSize="11" Foreground="#64748B"/>
                <Rectangle Height="3" Width="40" Fill="#3B82F6" HorizontalAlignment="Left" Margin="0,8,0,0"/>
            </StackPanel>

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10">
                <StackPanel>
                    <TextBlock Text="Select Report Type" Style="{StaticResource SectionHeader}"/>
                    <StackPanel Margin="10,0">
                        <RadioButton x:Name="RdoStudentList" Content="Student List Report" Margin="5" Foreground="#1E3A8A" IsChecked="True"/>
                        <RadioButton x:Name="RdoCourseList" Content="Course List Report" Margin="5" Foreground="#1E3A8A"/>
                        <RadioButton x:Name="RdoEnrollment" Content="Enrollment Report" Margin="5" Foreground="#1E3A8A"/>
                        <RadioButton x:Name="RdoGradeSummary" Content="Grade Summary Report" Margin="5" Foreground="#1E3A8A"/>
                    </StackPanel>

                    <TextBlock Text="Export Format" Style="{StaticResource SectionHeader}"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0">
                        <CheckBox x:Name="ChkExportPDF" Content="PDF Document" Margin="5" Foreground="#1E3A8A"/>
                        <CheckBox x:Name="ChkPrint" Content="Direct Print" Margin="5,5,20,5" Foreground="#1E3A8A"/>
                    </StackPanel>

                    <TextBlock Text="Filters" Style="{StaticResource SectionHeader}"/>
                    <CheckBox x:Name="ChkFilterByDate" Content="Filter by Date Range" Margin="15,5" Foreground="#1E3A8A" Checked="ChkFilterByDate_Checked"/>

                    <Border x:Name="PanelDateRange" Visibility="Collapsed" 
                            Background="#223B82F6" CornerRadius="10" Padding="15" Margin="10,5">
                        <StackPanel>
                            <Label Content="From Date:" Foreground="#1E3A8A"/>
                            <DatePicker x:Name="DateFrom" Margin="0,0,0,10"/>
                            <Label Content="To Date:" Foreground="#1E3A8A"/>
                            <DatePicker x:Name="DateTo"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <UniformGrid Grid.Row="2" Columns="3" Margin="0,15,0,0">
                <Button Content="Preview" Style="{StaticResource ActionButton}" 
                        Background="#3B82F6" Margin="5" Click="PreviewReport_Click"/>

                <Button Content="Generate" Style="{StaticResource ActionButton}" 
                        Background="#10B981" Margin="5" Click="GenerateReport_Click"/>

                <Button Content="Close" Style="{StaticResource ActionButton}" 
                        Background="#64748B" Margin="5" Click="Close_Click"/>
            </UniformGrid>
        </Grid>
    </Border>
</Window>