<Window x:Class="VirtualClassroom.RoleSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Portal" Height="500" Width="850"
        WindowStartupLocation="CenterScreen" WindowStyle="None" 
        AllowsTransparency="True" Background="Transparent">

    <Border CornerRadius="20" Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Click="TeacherPortal_Click" Background="#4338CA">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="20,0,0,20">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="👨‍🏫" FontSize="80" HorizontalAlignment="Center"/>
                                <TextBlock Text="Teacher Portal" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                                <TextBlock Text="Manage classes, grades, and students" Foreground="White" Opacity="0.7" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Grid.Column="1" Click="StudentPortal_Click" Background="#0D9488">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0,20,20,0">
                            <StackPanel VerticalAlignment="Center">
                                <TextBlock Text="🎓" FontSize="80" HorizontalAlignment="Center"/>
                                <TextBlock Text="Student Portal" Foreground="White" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,0"/>
                                <TextBlock Text="View your reports and attendance" Foreground="White" Opacity="0.7" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="15" 
                    Background="Transparent" BorderThickness="0" Foreground="Gray" FontSize="20" Click="Close_Click"/>
        </Grid>
    </Border>
</Window>