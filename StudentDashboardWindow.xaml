<Window x:Class="VirtualClassroom.StudentDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Portal" Height="500" Width="850"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Background>
        <ImageBrush ImageSource="Images/student.jpg" Stretch="UniformToFill" Opacity="0.4"/>
    </Window.Background>

    <Grid >
        <Grid.Resources>
            <Style x:Key="DashboardTile" TargetType="Button">
                <Setter Property="Background" Value="#CCFFFFFF"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="15" BorderBrush="#6366F1" BorderThickness="0">
                                <Border.Effect>
                                    <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.2"/>
                                </Border.Effect>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="LogoutButton" TargetType="Button">
                <Setter Property="Background" Value="#EF4444"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,30">
                <TextBlock Text="Student Dashboard" FontSize="32" FontWeight="ExtraBold" Foreground="White">
                    <TextBlock.Effect>
                        <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.5"/>
                    </TextBlock.Effect>
                </TextBlock>
                <Rectangle Height="4" Width="80" Fill="#6366F1" HorizontalAlignment="Left" Margin="0,5,0,0"/>
            </StackPanel>

            <UniformGrid Grid.Row="1" Columns="3" Rows="1">

                <Button Style="{StaticResource DashboardTile}" Click="ViewAttendance_Click">
                    <StackPanel>
                        <TextBlock Text="📅" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Attendance Report" FontSize="16" FontWeight="Bold" Foreground="#1E293B" Margin="0,15,0,0"/>
                        <TextBlock Text="View your records" FontSize="12" Foreground="#64748B" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource DashboardTile}" Click="ViewGrades_Click">
                    <StackPanel>
                        <TextBlock Text="📝" FontSize="48" HorizontalAlignment="Center"/>
                        <TextBlock Text="Grade Report" FontSize="16" FontWeight="Bold" Foreground="#1E293B" Margin="0,15,0,0"/>
                        <TextBlock Text="Check your progress" FontSize="12" Foreground="#64748B" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Style="{StaticResource DashboardTile}" Click="JoinMeetingButton_Click" BorderThickness="2" BorderBrush="#6366F1">
                    <Grid>
                        <Border x:Name="LiveBadge" 
                                Visibility="Collapsed" 
                                Background="#EF4444" 
                                CornerRadius="5" 
                                Padding="8,3" 
                                VerticalAlignment="Top" 
                                HorizontalAlignment="Right" 
                                Margin="0,-20,-20,0">
                            <TextBlock Text="LIVE" Foreground="White" FontSize="11" FontWeight="Bold"/>
                        </Border>

                        <StackPanel>
                            <TextBlock Text="📹" FontSize="48" HorizontalAlignment="Center"/>
                            <TextBlock Text="Join Live Class" FontSize="16" FontWeight="Bold" Foreground="#4338CA" Margin="0,15,0,0"/>
                            <TextBlock Text="Enter virtual room" FontSize="12" Foreground="#64748B" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Button>

            </UniformGrid>

            <Button Grid.Row="2" Content="Logout" Width="120" Height="40" 
                    HorizontalAlignment="Right" Style="{StaticResource LogoutButton}"
                    Click="Logout_Click"/>
        </Grid>
    </Grid>
</Window>