<Window x:Class="VirtualClassroom.StudentAttendanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Attendance" Height="500" Width="750"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Background>
        <ImageBrush ImageSource="Images/attendance.jpg" Stretch="UniformToFill" Opacity="0.6"/>
    </Window.Background>

    <Grid >
        <Grid.Resources>
            <Style TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="#3B82F6"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="10,5"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
            </Style>

            <Style x:Key="BlueReturnButton" TargetType="Button">
                <Setter Property="Background" Value="#3B82F6"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2563EB"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="Attendance Record" FontSize="28" FontWeight="ExtraBold" Foreground="AliceBlue"/>
                <TextBlock Text="Review your daily presence in each course" FontSize="14" Foreground="white" Margin="0,2,0,0"/>
                <Rectangle Height="3" Width="60" Fill="#3B82F6" HorizontalAlignment="Left" Margin="0,10,0,0"/>
            </StackPanel>

            <Border Grid.Row="1" CornerRadius="12" Background="#CCFFFFFF" Padding="5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <DataGrid x:Name="DgAttendance" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Background="Transparent" 
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#E2E8F0"
                          RowBackground="Transparent" 
                          AlternatingRowBackground="#1A3B82F6"
                          FontSize="14">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Date" Binding="{Binding AttendanceDate, StringFormat=\{0:dd/MM/yyyy\}}" Width="140"/>
                        <DataGridTextColumn Header="Course" Binding="{Binding CourseName}" Width="*"/>
                        <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="120">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Button Content="Return to Dashboard" 
                    Grid.Row="2" 
                    HorizontalAlignment="Left" 
                    Margin="0,20,0,0" 
                    Style="{StaticResource BlueReturnButton}"
                    Click="Back_Click"/>
        </Grid>
    </Grid>
</Window>