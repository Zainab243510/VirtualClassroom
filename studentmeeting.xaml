<Window x:Class="VirtualClassroom.StudentMeeting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Student Meeting Room" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" Background="#0F172A"
        AllowsTransparency="True" WindowStyle="None">

    <Border CornerRadius="20" Background="#1E293B" BorderBrush="#334155" BorderThickness="2">
        <Grid Margin="20">
            <StackPanel VerticalAlignment="Center">

                <Button Content="✕" HorizontalAlignment="Right" VerticalAlignment="Top" 
                        Foreground="White" Background="Transparent" BorderThickness="0" 
                        Click="Close_Click" Cursor="Hand" Margin="0,-20,-10,0"/>

                <TextBlock Text="CLASSROOM STATUS" Foreground="#94A3B8" 
                           HorizontalAlignment="Center" FontWeight="Bold" />

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,30,0,30">
                    <Ellipse x:Name="StatusDot" Width="20" Height="20" Fill="Red" Margin="0,0,15,0">
                        <Ellipse.Effect>
                            <BlurEffect Radius="8"/>
                        </Ellipse.Effect>
                    </Ellipse>
                    <TextBlock x:Name="TxtMeetingStatus" Text="OFFLINE" Foreground="White" 
                               FontSize="22" FontWeight="ExtraBold"/>
                </StackPanel>

                <TextBlock Text="The join button will activate automatically once your teacher starts the session." 
                           Foreground="#64748B" TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,30"/>

                <Button x:Name="BtnAction" Content="Waiting for Teacher..." 
                        Height="55" FontSize="18" FontWeight="Bold"
                        Click="BtnAction_Click" Cursor="Hand" IsEnabled="False">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#475569"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="15">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>

                <TextBlock x:Name="TxtAutoRefresh" Text="Auto-checking status..." 
                           Foreground="#6366F1" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="11"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>