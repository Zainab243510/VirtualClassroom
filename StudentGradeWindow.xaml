<Window x:Class="VirtualClassroom.StudentGradesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Grades" Height="633" Width="517"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Background>
        <ImageBrush ImageSource="Images/grades.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Grid >
        <Grid.Resources>
            <Style TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="#3B82F6"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="10,8"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="HorizontalContentAlignment" Value="Center"/>
            </Style>

            <Style x:Key="BlueReturnButton" TargetType="Button">
                <Setter Property="Background" Value="#3B82F6"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="Padding" Value="20,10"/>
                <Setter Property="FontWeight" Value="Bold"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2563EB"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="My Grade Report" FontSize="28" FontWeight="ExtraBold" Foreground="#1E3A8A"/>
                <TextBlock Text="View your current academic performance" FontSize="14" Foreground="White" Margin="0,2,0,0"/>
                <Rectangle Height="3" Width="60" Fill="#3B82F6" HorizontalAlignment="Left" Margin="0,10,0,0"/>
            </StackPanel>

            <Border Grid.Row="1" CornerRadius="12" Background="#CCFFFFFF" Padding="5">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <DataGrid x:Name="DgStudentGrades" 
                          AutoGenerateColumns="False" 
                          IsReadOnly="True"
                          Background="Transparent" 
                          BorderThickness="0"
                          GridLinesVisibility="Horizontal"
                          HorizontalGridLinesBrush="#E2E8F0"
                          RowBackground="Transparent" 
                          AlternatingRowBackground="#1A3B82F6"
                          FontSize="15"
                          RowHeight="40">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Course Name" Binding="{Binding CourseName}" Width="*"/>
                        <DataGridTextColumn Header="Grade" Binding="{Binding Grade}" Width="150">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="FontWeight" Value="Bold"/>
                                    <Setter Property="Foreground" Value="#1E3A8A"/>
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                    <Setter Property="VerticalAlignment" Value="Center"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <Button Content="Back to Dashboard" 
                    Grid.Row="2" 
                    HorizontalAlignment="Left" 
                    Margin="0,20,0,0" 
                    Style="{StaticResource BlueReturnButton}"
                    Click="Back_Click"/>
        </Grid>
    </Grid>
</Window>