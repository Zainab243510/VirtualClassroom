<Window x:Class="VirtualClassroom.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="450" Width="400">

    <Border Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

            <TextBlock Text="Student Management Portal" 
                       FontSize="20" FontWeight="Bold" 
                       Margin="0,0,0,20" 
                       HorizontalAlignment="Center"/>

            <Button Content="1. Add New Student" 
                    Width="250" Margin="0,5" Padding="10"
                    Click="AddStudent_Click"/>

            <Button Content="2. Add New Course" 
                    Width="250" Margin="0,5" Padding="10"
                    Click="AddCourse_Click"/>

            <Button Content="3. Assign Grades" 
                    Width="250" Margin="0,5" Padding="10"
                    Click="AssignGrades_Click"/>

            <Button Content="4. View All Data / Filter" 
                    Width="250" Margin="0,5" Padding="10"
                    Click="ViewData_Click"/>

            <Button Content="5. Generate Reports (PDF/Excel)" 
                    Width="250" Margin="0,5" Padding="10"
                    Click="Reports_Click"/>

            <Button Content="Log Out" 
                    Width="100" Margin="0,30,0,0" Padding="5"
                    Click="Logout_Click" Background="Red" Foreground="White"/>

        </StackPanel>
    </Border>
</Window>