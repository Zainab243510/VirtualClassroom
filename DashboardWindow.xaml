<Window x:Class="VirtualClassroom.DashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Dashboard" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#D6EEFF">

    <Window.Resources>
        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#1E40AF"/>
            <Setter Property="Height" Value="50"/>
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="10" Padding="15,0">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3B82F6"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatCard" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" ShadowDepth="1" Opacity="0.05"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" Margin="15" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="0" Opacity="0.1"/>
            </Border.Effect>
            <StackPanel Margin="10,30">
                <TextBlock Text="🏫 VIRTUAL CLASS" Foreground="#1E3A8A" FontSize="20" FontWeight="Bold" Margin="20,0,0,30"/>

                <Button Content="👤    Add New Student" Style="{StaticResource NavButton}" Click="AddStudent_Click"/>
                <Button Content="📚    Add New Course" Style="{StaticResource NavButton}" Click="AddCourse_Click"/>
                <Button Content="📝    Assign Grades" Style="{StaticResource NavButton}" Click="AssignGrades_Click"/>

                <Button Content="📅    Mark Attendance" Style="{StaticResource NavButton}" Click="MarkAttendance_Click"/>

                <Button Content="🔎    View All Records" Style="{StaticResource NavButton}" Click="ViewData_Click"/>
                <Button Content="📊    Generate Reports" Style="{StaticResource NavButton}" Click="Reports_Click"/>

                <Button Content="🎥    Class Meetings" Style="{StaticResource NavButton}" Click="Meetings_Click" Background="#E0F2FE"/>

                <Separator Margin="20,20" Background="#D6EEFF"/>
                <Button Content="🚪    Logout" Click="Logout_Click" Style="{StaticResource NavButton}" Foreground="#EF4444"/>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="5,15,15,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <UniformGrid Grid.Row="0" Columns="5" Margin="0,0,0,10">
                <Border Style="{StaticResource StatCard}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="👥" FontSize="30" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="Students" Foreground="#64748B" FontSize="11"/>
                            <TextBlock Text="Active List" FontWeight="Bold" Foreground="#1E3A8A" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCard}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📖" FontSize="30" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="Courses" Foreground="#64748B" FontSize="11"/>
                            <TextBlock Text="Catalog" FontWeight="Bold" Foreground="#1E3A8A" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCard}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🏆" FontSize="30" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="Grades" Foreground="#64748B" FontSize="11"/>
                            <TextBlock Text="Performance" FontWeight="Bold" Foreground="#1E3A8A" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCard}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📅" FontSize="30" VerticalAlignment="Center" Margin="0,0,15,0"/>
                        <StackPanel>
                            <TextBlock Text="Attendance" Foreground="#64748B" FontSize="11"/>
                            <TextBlock Text="Daily Tracking" FontWeight="Bold" Foreground="#1E3A8A" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Style="{StaticResource StatCard}" BorderBrush="#3B82F6" BorderThickness="1">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🔴" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="Live Session" Foreground="#64748B" FontSize="11"/>
                            <TextBlock x:Name="TxtLiveIndicator" Text="Check Status" FontWeight="Bold" Foreground="#1E3A8A" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </UniformGrid>

            <Border Grid.Row="1" Background="White" CornerRadius="20" Padding="0">
                <Border.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
                </Border.Effect>
                <Border CornerRadius="15" ClipToBounds="True">
                    <Image Source="Images/loginclassroom.jpg" Stretch="UniformToFill" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </Border>
            </Border>
        </Grid>
    </Grid>
</Window>